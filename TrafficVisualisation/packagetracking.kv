<Package>:
    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.3, 1

            canvas:
                Color:
                    rgb: .6, .6, .6

                Rectangle:
                    pos: self.pos
                    size: self.size

            ScrollView:
                size: self.size
                BoxLayout:
                    orientation: 'vertical'

                    Label:
                        id: gateway
                        text: 'Gateway: '
                        color: 0, 0, 1, 1
                        size_hint: 1, 0.05

                    StackLayout:
                        id: transmitters_list
                        orientation: 'lr-tb'
                        padding: 10
                        spacing: 10

        BoxLayout:
            canvas:
                Color:
                    rgb: 1, 1, 1

                Rectangle:
                    pos: self.pos
                    size: self.size

            ScrollView:
                size: self.size
                StackLayout:
                    id: package_pool
                    padding: 10
                    spacing: 15
                    orientation: 'lr-tb'

                    Button:
                        id: device1
                        text: 'XBee Device'
                        size_hint: .5, .2
                        background_color: (0, 0, 1, 1)

                    Button:
                        id: device2
                        text: 'XBee Device'
                        size_hint: .5, .2
                        background_color: (0, 0, 1, 1)
